<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bakingListFragment">

    <fragment
        android:id="@+id/bakingListFragment"
        android:name="com.example.android.bakingapp.bakingList.BakingListFragment"
        android:label="BakingListFragment"
        tools:layout="@layout/fragment_baking_list">
        <action
            android:id="@+id/action_bakingListFragment_to_ingredientListFragment"
            app:destination="@id/ingredientListFragment" />
    </fragment>
    <fragment
        android:id="@+id/ingredientListFragment"
        android:name="com.example.android.bakingapp.ingredientList.IngredientListFragment"
        android:label="fragment_ingredient_list"
        tools:layout="@layout/fragment_ingredient_list" >
        <argument
            android:name="recipe"
            app:argType="com.example.android.bakingapp.network.Recipe"
            />
    </fragment>
</navigation>